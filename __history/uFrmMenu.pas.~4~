  Application.CreateForm(TFrmLancPedidos,FrmLancPedidos);
  try
    FrmLancPedidos.ShowModal;
  finally
    FrmLancPedidos.Destroy;
    FrmProdutos.Destroy;
    FrmPedidosConsulta.Destroy;
    FrmCadFormapag.Destroy;
    FrmCadClassPedido.Destroy;
    FrmClientes.Destroy;
  end;

end;

